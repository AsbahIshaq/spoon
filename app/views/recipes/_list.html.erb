<% recipes.each do |recipe| %>
  <%= link_to(recipe_path(recipe.id)) do %>
    <div class="contentful-product">
      <div class="contentful-title">
        <h1><%= recipe.title %></h1>
      </div>
      <img src="<%= recipe.photo&.url %>" width=600 height=400 style="background-image:url(<%=asset_path('image_not_found.jpg') %>)" />
    </div>
  <% end %>
<% end %>